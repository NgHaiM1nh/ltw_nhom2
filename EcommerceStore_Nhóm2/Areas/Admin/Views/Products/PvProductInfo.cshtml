@model EcommerceStore_Nhóm2.Models.Product

@*DANH SÁCH CHI TIẾT SẢN PHẨM*@
<head>
    <style>
        img {
            height: 250px;
            max-width: 250px;
        }
    </style>
</head>
<div class="container-fluid">
    <hr />
    <dl class="dl-horizontal">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ImageList)" />
        </div>
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>

</div>